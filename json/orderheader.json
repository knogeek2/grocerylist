{
  "table": "ORDERHEADER_TBL",
  "columns": {
    "ORDERNO": {
      "type": "integer",
      "autoIncrement": true,
      "primaryKey": true,
      "description": "System-generated unique order number."
    },
    "VENDORORDERNO": {
      "type": "string",
      "maxLength": 50,
      "nullable": true,
      "description": "Vendor's purchase order or reference number, if available."
    },
    "VENDORID": {
      "type": "string",
      "maxLength": 25,
      "description": "Foreign key to VENDOR_TBL. Identifies the vendor fulfilling the order."
    },
    "ORDERDATE": {
      "type": "string",
      "format": "date",
      "description": "Date the order was created."
    },
    "CLOSED": {
      "type": "boolean",
      "default": false,
      "description": "True if all items are received and paid for. Used to lock edits and filter active orders."
    },
    "PMTMETHOD": {
      "type": "string",
      "maxLength": 25,
      "nullable": true,
      "description": "Payment method used (e.g., 'Check', 'ACH', 'Credit')."
    },
    "NOTE": {
      "type": "string",
      "maxLength": 255,
      "nullable": true,
      "description": "Freeform notes about the order."
    },
    "SALESTAX": {
      "type": "number",
      "nullable": true,
      "description": "Sales tax applied to the entire order."
    },
    "SHIPPING": {
      "type": "number",
      "nullable": true,
      "description": "Shipping cost, if applicable."
    }
  }
}
